{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gradlew clean compile",
            "type": "shell",
            "command": "./gradlew",
            "args": [
                "clean",
                "compileJava",
                "compileTestJava",
                "-x",
                "test"
            ],
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}